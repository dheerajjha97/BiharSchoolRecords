
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Schools collection:
    // Anyone can read school details for login and QR code generation.
    // Only authenticated users (admins) can create or update school info.
    match /schools/{udise} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Admissions and Fee Structures:
    // Only allow read/write operations if the user is authenticated (logged in).
    // This protects all sensitive student and financial data.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
